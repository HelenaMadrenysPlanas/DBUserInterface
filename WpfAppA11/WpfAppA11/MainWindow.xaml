<Window x:Class="WpfAppA11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppA11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Comandes">
                <MenuItem Name="itConsulta" Header="Consulta" Click="itConsulta_Click"/>
                <MenuItem Name="itManteniment" Header="Manteniment" Click="itManteniment_Click"/>
                <Separator/>
                <MenuItem Name="itSortir" Header="Sortir" Click="itSortir_Click"/>
            </MenuItem>
        </Menu>
        <Image Grid.Row="1" Source=".\Resources\Image.png"/>
    </Grid>
</Window>
